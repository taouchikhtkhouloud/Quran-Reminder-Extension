{
  "name": "Quran Reminder",
  "version": "0.1.3",
  "description": "Simple chrome extension that reminds you to read a verse",
  "icons": { "16": "icon/16.png", "48": "icon/48.png", "128": "icon/128.png" },
  "permissions": [
    "notifications",
    "alarms",
    "storage"
  ],
  "background": {
    "scripts": ["/js/background.js"],
    "persistent": true
  },
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Quran Reminder Event",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/16.png",
      "48": "icon/48.png",
      "128": "icon/128.png"
    }
  },
  "web_accessible_resources": ["128.png"]
}
